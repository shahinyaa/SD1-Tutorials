while True:
    try:
        # Display the menu options
        print("Menu:")
        print("1. Option 1")
        print("2. Option 2")
        print("3. Option 3")
        print("4. Quit")

        # Get user input
        choice = input("Enter a menu option (1, 2, 3, or 4): ")

        if choice == '1':
            print("1 selected")
        elif choice == '2':
            print("2 selected")
        elif choice == '3':
            print("3 selected")
        elif choice == '4':
            print("Quit selected")
            break  # Exit the loop
        else:
            print("Option not recognized")

    except ValueError:
        print("Enter an integer.")

# Program ends when the user selects "Quit" (option 4)